{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["vue-router", "prismjs", "element-plus/global", "wangeditor5-for-vue3/global"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@router/*": ["src/router/*"],
      "@view/*":["src/vuew/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
