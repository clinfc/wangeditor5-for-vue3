{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "outDir": "dist/es",
    "declaration": true,
    "declarationDir": "dist/types",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "listEmittedFiles": true,
    "types": ["@types/lodash.clonedeep", "@types/lodash.debounce"]
  },
  "include": ["./src/**/*.ts"]
}
