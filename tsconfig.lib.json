{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    "module": "umd",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "lib",
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["example/**/*.vue", "example/**/*.ts"]
}
